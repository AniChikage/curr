<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:background="@color/tongyi_red"
        android:layout_width="match_parent"
        android:layout_height="20dp">

    </LinearLayout>

    <LinearLayout
        android:background="@color/tongyi_red"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/ai_back"
            android:layout_marginLeft="20dp"
            android:src="@drawable/rp_title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/solid_white"
        android:scrollbars="vertical">
        <LinearLayout android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <LinearLayout
                android:background="@color/alter_bg"
                android:layout_width="match_parent"
                android:layout_height="120dp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/hint_color"
                    android:text="昵称"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <EditText
                    android:layout_marginLeft="15dp"
                    android:id="@+id/ai_nickname"
                    android:background="@color/solid_white"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/hint_color"
                android:layout_width="match_parent"
                android:layout_height="2dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/hint_color"
                    android:text="登录密码"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <EditText
                    android:layout_marginLeft="15dp"
                    android:id="@+id/ai_password"
                    android:background="@color/solid_white"
                    android:layout_weight="1"
                    android:password="true"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/hint_color"
                android:layout_width="match_parent"
                android:layout_height="2dp">
            </LinearLayout>

            <!-- second part -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ai_phone_tv"
                    android:textColor="@color/hint_color"
                    android:text="紧急联系人电话"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <EditText
                    android:layout_marginLeft="15dp"
                    android:id="@+id/ai_phone"
                    android:background="@color/solid_white"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/hint_color"
                android:layout_width="match_parent"
                android:layout_height="2dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ai_address_tv"
                    android:textColor="@color/hint_color"
                    android:text="收件地址"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <EditText
                    android:layout_marginLeft="15dp"
                    android:id="@+id/ai_address"
                    android:background="@color/solid_white"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/hint_color"
                android:layout_width="match_parent"
                android:layout_height="2dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ai_region_tv"
                    android:textColor="@color/hint_color"
                    android:text="宗教信仰"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <EditText
                    android:layout_marginLeft="15dp"
                    android:id="@+id/ai_region"
                    android:background="@color/solid_white"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll3"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/hint_color"
                android:layout_width="match_parent"
                android:layout_height="2dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ai_hometown_tv"
                    android:textColor="@color/hint_color"
                    android:text="家乡"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <EditText
                    android:layout_marginLeft="15dp"
                    android:id="@+id/ai_hometown"
                    android:background="@color/solid_white"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll4"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/hint_color"
                android:layout_width="match_parent"
                android:layout_height="2dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ai_hunyin_tv"
                    android:textColor="@color/hint_color"
                    android:text="婚姻状况"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <EditText
                    android:layout_marginLeft="15dp"
                    android:id="@+id/ai_hunyin"
                    android:background="@color/solid_white"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll5"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/hint_color"
                android:layout_width="match_parent"
                android:layout_height="2dp">
            </LinearLayout>

            <!-- third part -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/hint_color"
                    android:text="真实姓名"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <EditText
                    android:layout_marginLeft="15dp"
                    android:id="@+id/ai_realname"
                    android:background="@color/solid_white"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/hint_color"
                android:layout_width="match_parent"
                android:layout_height="2dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/hint_color"
                    android:text="性别"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <EditText
                    android:layout_marginLeft="15dp"
                    android:id="@+id/ai_gender"
                    android:background="@color/solid_white"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/hint_color"
                android:layout_width="match_parent"
                android:layout_height="2dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/hint_color"
                    android:text="生日"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <EditText
                    android:layout_marginLeft="15dp"
                    android:id="@+id/ai_birthday"
                    android:background="@color/solid_white"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/hint_color"
                android:layout_width="match_parent"
                android:layout_height="2dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/hint_color"
                    android:text="手机"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <EditText
                    android:layout_marginLeft="15dp"
                    android:id="@+id/ai_telephone"
                    android:background="@color/solid_white"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/hint_color"
                android:layout_width="match_parent"
                android:layout_height="2dp">
            </LinearLayout>

            <TextView
                android:text="确认"
                android:id="@+id/ai_queren"
                android:gravity="center"
                android:textColor="@color/solid_white"
                android:background="@color/tongyi_red"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>


    </ScrollView>
</LinearLayout>


