<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/csdt_header_ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/csdtimg"
            android:layout_weight="1162"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1402"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/csabname"
                android:layout_weight="726"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_weight="564"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </LinearLayout>
            <TextView
                android:id="@+id/csablevel"
                android:gravity="center"
                android:layout_weight="518"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1488"
            android:background="#f3f3f3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>
        <LinearLayout
            android:layout_weight="898"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="性别"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/csabgender"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:background="#f3f3f3"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="从业年限"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/csabyear"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:background="#f3f3f3"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="案例时长"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/csabtime"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:background="#f3f3f3"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="收费标准"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/csabprice"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:background="#f3f3f3"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="专长"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/csabzhuanchang"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical|right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:background="#f3f3f3"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="不足"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/csabbuzu"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1370"
            android:background="#f3f3f3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="7"
                android:text="其他信息"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
